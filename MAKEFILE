release: DRAWING.ASM VIDEO.OBJ RANDOM.OBJ KEYBOARD.OBJ
	ML /W3 /WX VIDEO.OBJ RANDOM.OBJ KEYBOARD.OBJ DRAWING.ASM /Fe DRAWING.EXE

debug: DRAWING.ASM VIDEO_D.OBJ RANDOM_D.OBJ KEYBOARD_D.OBJ
	ML /Zi /W3 /WX VIDEO_D.OBJ RANDOM_D.OBJ KEYBOARD_D.OBJ DRAWING.ASM /Fe DRAWINGD.EXE

VIDEO.OBJ: VIDEO.ASM
	ML /c /W3 /WX /FoVIDEO.OBJ /Ta VIDEO.ASM
VIDEO_D.OBJ: VIDEO.ASM
	ML /c /Zi /W3 /WX /FoVIDEO_D.OBJ /Ta VIDEO.ASM
	
RANDOM.OBJ: RANDOM.ASM
	ML /c /W3 /WX /FoRANDOM.OBJ /Ta RANDOM.ASM
RANDOM_D.OBJ: RANDOM.ASM
	ML /c /Zi /W3 /WX /FoRANDOM_D.OBJ /Ta RANDOM.ASM
	
KEYBOARD.OBJ: KEYBOARD.ASM
	ML /c /W3 /WX /FoKEYBOARD.OBJ /Ta KEYBOARD.ASM
KEYBOARD_D.OBJ: KEYBOARD.ASM
	ML /c /Zi /W3 /WX /FoKEYBOARD_D.OBJ /Ta KEYBOARD.ASM

clean:
	del *.EXE
	del *.OBJ

cv: debug
	cv /s /43 DRAWINGD.EXE
